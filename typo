        }

        #canvas-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 10;
            
            /* ë‹¤í¬ ëª¨ë“œ ì´ë¯¸ì§€ (GitHub URL) */
            background-image: url('https://github.com/user-attachments/assets/7900f748-e60d-4362-a1cd-d9b97c3621da');
            
            /* ğŸ†• ì´ë¯¸ì§€ê°€ ì˜ë¦¬ì§€ ì•Šë„ë¡ contain ì‚¬ìš© */
            background-size: contain; 
            background-position: center;
