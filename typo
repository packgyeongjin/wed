        }

        /* ë‹ë³´ê¸° (Loupe) ìŠ¤íƒ€ì¼ */
        #loupe {
            position: fixed;
            width: 300px; 
            height: 300px; 
            border-radius: 50%;
            border: none; 
            box-shadow: inset 0 0 50px 30px rgba(0, 0, 0, 0.8), 
                        0 0 20px rgba(0,0,0,0.5); 
            overflow: hidden;
            pointer-events: none; 
            z-index: 100;
            display: none;
            background-color: transparent;
        }

        /* ë‹ë³´ê¸° ë‚´ë¶€ ë°°ê²½ (ì¤‘ë¦½ ì´ë¯¸ì§€) */
        #loupe-background {
            background-image: url('https://i.postimg.cc/RFBNXcbT/junglib.png');
            
            /* ğŸ†• ë‹ë³´ê¸° ë‚´ë¶€ ì´ë¯¸ì§€ë„ ì˜ë¦¬ì§€ ì•Šë„ë¡ contain ì ìš© */
            background-size: contain;         
            background-position: center;    
            background-attachment: fixed;   
            background-repeat: no-repeat;
            width: 100%;
            height: 100%;
            position: absolute;
            z-index: -1; 
        }
        
        label {
            color: #ddd;
