        }

        #brushSize {
            width: 150px;
            margin-right: 15px;
            cursor: pointer;
        }
        
        /* ë²„íŠ¼ ìŠ¤íƒ€ì¼ */
        #toggleLoupe, #toggleBasic, #toggleTexture, #toggleEffect, #resetButton {
            width: 45px; 
