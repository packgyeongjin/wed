<body>

    <div id="canvas-container">
        <canvas id="scratchCanvas"></canvas>
    </div>

    <div id="loupe">
        <div id="loupe-background"></div> 
    </div>

    <div id="controls">
        <button id="toggleBasic" title="ê¸°ë³¸ ë¸ŒëŸ¬ì‹œ">ğŸ–Œï¸</button> 
        <button id="toggleTexture" title="í…ìŠ¤ì²˜ ë¸ŒëŸ¬ì‹œ">âš«</button> 
        <button id="toggleEffect" title="ì´í™íŠ¸ ë¸ŒëŸ¬ì‹œ">ğŸ’¥</button> 

        <div style="width: 1px; height: 30px; background: #555; margin: 0 5px;"></div>

        <button id="toggleLoupe" title="ë‹ë³´ê¸° (ì¤‘ë¦½ í˜ì´ì§€)">ğŸ”</button>

        <div style="width: 1px; height: 30px; background: #555; margin: 0 5px;"></div>

        <label for="brushSize">í¬ê¸°</label>
        <input type="range" id="brushSize" name="brushSize" min="10" max="100" value="50">
        <span id="currentSize">50</span>

        <div style="width: 1px; height: 30px; background: #555; margin: 0 5px;"></div>

        <button id="resetButton" title="ì´ˆê¸°í™”">ğŸ”„</button> 
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const canvasContainer = document.getElementById('canvas-container');
            const canvas = document.getElementById('scratchCanvas');
            const ctx = canvas.getContext('2d');

            let lightModeImage = new Image();
            lightModeImage.crossOrigin = "Anonymous"; 
            lightModeImage.src = 'https://i.imgur.com/wCB3iXx.jpeg';

            const sizeInput = document.getElementById('brushSize');
            const currentSizeSpan = document.getElementById('currentSize');
            let brushRadius = parseInt(sizeInput.value);

            const resetButton = document.getElementById('resetButton');
            const toggleBasicButton = document.getElementById('toggleBasic');
            const toggleTextureButton = document.getElementById('toggleTexture');
            const toggleEffectButton = document.getElementById('toggleEffect');
            const toggleLoupeButton = document.getElementById('toggleLoupe');
            
            const loupe = document.getElementById('loupe');
            const loupeSize = 300; 

            let isBasicBrush = true; 
            let isTextureBrush = false; 
            let isEffectBrush = false; 
            let isLoupeActive = false; 
            let isDrawing = false;
            let imageLoaded = false;
            
            // **ê³ í™”ì§ˆ ë Œë”ë§ì„ ìœ„í•œ ìº”ë²„ìŠ¤ ì´ˆê¸°í™” í•¨ìˆ˜ (Contain ë¡œì§ ì ìš©)**
            function initializeCanvas() {
                const dpr = window.devicePixelRatio || 1;
                const displayWidth = canvasContainer.offsetWidth;
                const displayHeight = canvasContainer.offsetHeight;

                canvas.style.width = displayWidth + 'px';
                canvas.style.height = displayHeight + 'px';

                canvas.width = displayWidth * dpr;
                canvas.height = displayHeight * dpr;

                ctx.scale(dpr, dpr);
                ctx.imageSmoothingEnabled = false; 

                if (imageLoaded) {
                    ctx.clearRect(0, 0, canvas.width, canvas.height);
                    
                    const img = lightModeImage;
                    const canvasRatio = displayWidth / displayHeight;
                    const imgRatio = img.width / img.height;

                    let drawWidth, drawHeight, offsetX, offsetY;
                    
                    // ğŸ†• Contain ë¡œì§: ì´ë¯¸ì§€ê°€ í™”ë©´ ì•ˆì— ì™ ë“¤ì–´ì˜¤ê²Œ ê³„ì‚° (ì˜ë¦¼ ë°©ì§€)
                    if (imgRatio > canvasRatio) { 
                        // ì´ë¯¸ì§€ê°€ í™”ë©´ë³´ë‹¤ ë” ë‚©ì‘í•¨ -> ë„ˆë¹„ë¥¼ í™”ë©´ì— ë§ì¶¤ (ìœ„ì•„ë˜ ì—¬ë°±)
                        drawWidth = displayWidth;
                        drawHeight = displayWidth / imgRatio;
                        offsetX = 0;
                        offsetY = (displayHeight - drawHeight) / 2;
                    } else { 
                        // ì´ë¯¸ì§€ê°€ í™”ë©´ë³´ë‹¤ ë” í™€ì­‰í•¨ -> ë†’ì´ë¥¼ í™”ë©´ì— ë§ì¶¤ (ì¢Œìš° ì—¬ë°±)
                        drawHeight = displayHeight;
                        drawWidth = displayHeight * imgRatio;
                        offsetX = (displayWidth - drawWidth) / 2;
                        offsetY = 0;
                    }

                    ctx.drawImage(img, offsetX, offsetY, drawWidth, drawHeight);
                    ctx.globalCompositeOperation = 'destination-out';
                }
                updateCursor();
            }

            function updateCursor() {
                const cursorRadius = brushRadius;
                const svgWidth = cursorRadius * 2 + 4;
                const svgHeight = cursorRadius * 2 + 4;
                const centerX = cursorRadius + 2;
                const centerY = cursorRadius + 2;
                const svg = `<svg xmlns="http://www.w3.org/2000/svg" width="${svgWidth}" height="${svgHeight}" viewBox="0 0 ${svgWidth} ${svgHeight}"><circle cx="${centerX}" cy="${centerY}" r="${cursorRadius}" stroke="white" stroke-width="2" fill="none"/></svg>`;
                const encodedSvg = encodeURIComponent(svg);
                const cursorOffsetX = centerX;
                const cursorOffsetY = centerY;

                if (isLoupeActive) {
                    canvas.style.cursor = `none`;
                    return;
                }

                if (isBasicBrush) {
                    canvas.style.cursor = `url('data:image/svg+xml;utf8,${encodedSvg}') ${cursorOffsetX} ${cursorOffsetY}, auto`;
                } else if (isTextureBrush || isEffectBrush) {
                    canvas.style.cursor = 'crosshair'; 
                } else {
                    canvas.style.cursor = 'default';
                }
            }
            
            function toggleBrushState(type) {
                isBasicBrush = false;
                isTextureBrush = false;
                isEffectBrush = false;

                toggleBasicButton.classList.remove('active-tool');
                toggleTextureButton.classList.remove('active-tool');
                toggleEffectButton.classList.remove('active-tool');
                
                if (type === 'basic') {
                    isBasicBrush = true;
                    toggleBasicButton.classList.add('active-tool');
                } else if (type === 'texture') {
                    isTextureBrush = true;
                    toggleTextureButton.classList.add('active-tool');
                } else if (type === 'effect') {
                    isEffectBrush = true;
                    toggleEffectButton.classList.add('active-tool');
                }
                updateCursor();
            }

            toggleBasicButton.addEventListener('click', () => toggleBrushState('basic'));
            toggleTextureButton.addEventListener('click', () => toggleBrushState('texture'));
            toggleEffectButton.addEventListener('click', () => toggleBrushState('effect'));

            toggleLoupeButton.addEventListener('click', () => {
                isLoupeActive = !isLoupeActive; 
                
                if (isLoupeActive) {
                     toggleLoupeButton.classList.add('active-tool');
                     loupe.style.display = 'block';
                     toggleBrushState(null); 
                     canvas.style.pointerEvents = 'none'; 
                } else {
                     toggleLoupeButton.classList.remove('active-tool');
                     loupe.style.display = 'none';
                     toggleBrushState('basic'); 
                     canvas.style.pointerEvents = 'auto';
                }
                updateCursor();
            });
            
            resetButton.addEventListener('click', () => {
                initializeCanvas(); 
                toggleBrushState('basic');
            });

            let lastMouseX = -1, lastMouseY = -1;
            canvas.addEventListener('mousedown', (e) => {
                if (isLoupeActive) return; 
                isDrawing = true;
                if (isEffectBrush) {
                    drawExplosion(e.clientX, e.clientY);
                    isDrawing = false; 
                }
            });

            canvas.addEventListener('mouseup', () => {
                isDrawing = false;
                lastMouseX = -1; lastMouseY = -1;
            });

            const handleMouseMove = (e) => {
                const x = e.clientX;
                const y = e.clientY;

                if (isLoupeActive) {
                    loupe.style.left = `${x - (loupeSize / 2)}px`;
                    loupe.style.top = `${y - (loupeSize / 2)}px`;
                    return;
                }
                
                if (isDrawing && isEffectBrush) {
                    drawPixelShard(x, y);
                } else if (isDrawing) {
                    if (lastMouseX !== -1) {
                        drawSmooth(lastMouseX, lastMouseY, x, y);
                    } else {
                        drawAtPoint(x, y);
                    }
                }
                lastMouseX = x;
                lastMouseY = y;
            };

            document.body.addEventListener('mousemove', handleMouseMove);
            
            function drawSmooth(x1, y1, x2, y2) {
                const distance = Math.sqrt(Math.pow(x2 - x1, 2) + Math.pow(y2 - y1, 2));
                const angle = Math.atan2(y2 - y1, x2 - x1);
                
                for (let i = 0; i < distance; i += brushRadius / 3) { 
                    const x = x1 + Math.cos(angle) * i;
                    const y = y1 + Math.sin(angle) * i;
                    drawAtPoint(x, y);
                }
                drawAtPoint(x2, y2);
            }

            function drawAtPoint(x, y) {
                if (isTextureBrush) {
                    const density = 0.5; 
                    const numPoints = Math.floor(Math.PI * brushRadius * brushRadius * density / 100); 
                    for (let i = 0; i < numPoints; i++) {
                        const angle = Math.random() * Math.PI * 2;
                        const radius = Math.sqrt(Math.random()) * brushRadius; 
                        const pointX = x + radius * Math.cos(angle);
                        const pointY = y + radius * Math.sin(angle);
                        ctx.beginPath();
                        ctx.arc(pointX, pointY, 1.5, 0, Math.PI * 2);
                        ctx.fill();
                    }
                } else {
                    ctx.beginPath();
                    ctx.arc(x, y, brushRadius, 0, Math.PI * 2);
                    ctx.fill();
                }
            }
            
            function drawExplosion(x, y) {
                const explosionRadius = brushRadius * 2; 
                const numShards = 50;
                for (let i = 0; i < numShards; i++) {
                    const angle = Math.random() * Math.PI * 2;
                    const distance = Math.random() * explosionRadius;
                    const size = 5 + Math.random() * 15; 
                    const shardX = x + distance * Math.cos(angle);
                    const shardY = y + distance * Math.sin(angle);
                    ctx.clearRect(shardX, shardY, size, size);
                }
            }

            function drawPixelShard(x, y) {
                const shardSize = 5 + Math.random() * 10; 
                const numShards = 5; 
                const areaRadius = brushRadius * 1.5;
                for (let i = 0; i < numShards; i++) {
                    const offsetX = (Math.random() - 0.5) * areaRadius;
                    const offsetY = (Math.random() - 0.5) * areaRadius;
                    ctx.clearRect(x + offsetX, y + offsetY, shardSize, shardSize);
                }
            }

            window.addEventListener('resize', () => {
                initializeCanvas();
            });
            
            sizeInput.addEventListener('input', (e) => {
                brushRadius = parseInt(e.target.value);
                currentSizeSpan.textContent = brushRadius;
                updateCursor();
            });

            const loadAndInit = () => {
                 imageLoaded = true;
                 initializeCanvas();
                 toggleBrushState('basic'); 
            };
            
            lightModeImage.onload = loadAndInit;
            
            if (lightModeImage.complete && !imageLoaded) {
                loadAndInit();
            } else if (!imageLoaded) {
                 setTimeout(() => {
                    if (!imageLoaded) {
                        imageLoaded = true; 
                        initializeCanvas();
                        toggleBrushState('basic');
                    }
                 }, 500);
            }
            
            updateCursor();
            toggleBasicButton.classList.add('active-tool');
        });
    </script>
</body>
</html>
